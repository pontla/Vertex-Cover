#include <iostream>
#include <fstream>
#include <sstream>
#include <algorithm>
#include <limits>
#include <ctime>
#include "arguments.hpp"

#define _DEBUG 0

int main( int argc, char * argv[] )
{
	int  nbiter = 500, R = 1;
	//std::vector<double> * run, * zAlpha;
	int bDisplay = 10, Nalpha = 1;
	double alpha = 0.75;

	Arguments args( argc, argv );
	std::ifstream file;
	std::string rmspace( 60, ' ' );

	if ( !args.exists( "i" ) )
	{
		std::cout << "Usage: " << std::endl << '\t'
			<< argv[0] << " -i <fichier> [-alpha <alpha>] [-nbiter <nbiter>]" << std::endl
			<< "\t\t[-nbruns <nbruns>] [-periode <Nalpha>] [-pr]" << std::endl
			<< "\t\t[-display <disp>]" << std::endl
			<< std::endl
			<< "\t-i <fichier>" << std::endl
			<< "\t\tLe fichier contenant les donnees du probleme." << std::endl
			<< "\t-alpha <alpha>" << std::endl
			<< "\t\tListe des valeurs de alpha separees par des virgules," << std::endl
			<< "\t\tsans espace, exemple : '0.7,0.8,0.9'. (defaut:" << alpha << ")" << std::endl
			<< "\t\t(a partir de 2 elements, Reactive GRASP est active)." << std::endl
			<< "\t-nbiter <nbiter>" << std::endl
			<< "\t\tNombre d'iterations a chaque run." << std::endl
			<< "\t\t(defaut:" << nbiter << ")" << std::endl
			<< "\t-nbruns <nbruns>" << std::endl
			<< "\t\tNombre de runs." << std::endl
			<< "\t\t(defaut:" << R << ")" << std::endl
			<< "\t-periode <Nalpha>" << std::endl
			<< "\t\tPeriode pour laquelle les probabilites sont" << std::endl
			<< "\t\trecalculees (uniquement Reactive GRASP)." << std::endl
			<< "\t\t(defaut:" << Nalpha << ")" << std::endl
			<< "\t-pr" << std::endl
			<< "\t\tActive le Path Relinking." << std::endl
			<< "\t\t(defaut:desactive)" << std::endl
			<< "\t-display <disp>" << std::endl
			<< "\t\tAffiche z* tous les <disp> iterations." << std::endl
			<< "\t\tPour desactiver, donner <disp> = 0." << std::endl
			<< "\t\t(defaut:" << bDisplay << ")" << std::endl
			<< std::endl;
		return 0;
	}
	return 0;
}